<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--상단바!!!-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ScrollView
        android:fillViewport="true"
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:id="@+id/title"
            android:layout_gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="14dp"
                    android:fontFamily="@font/nanumregular"
                    android:gravity="right"
                    android:text="5월 셋째주"
                    android:textColor="#646464"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="14dp"

                    android:fontFamily="@font/nanumregular"
                    android:gravity="left"
                    android:text="평균 햇빛량 84%"
                    android:textColor="#F75321"
                    android:textSize="18sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>



            <LinearLayout
                android:padding="3dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="0dp"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="242dp">
                    <org.eazegraph.lib.charts.BarChart
                        android:layout_gravity="center"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/bar"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:layout_marginTop="10dp"
                        android:padding="10dp"
                        app:egEmptyDataText=""
                        app:egShowValues="false"
                        app:egLegendTextSize="12dp"
                        app:egFixedBarWidth="true"
                        app:egBarWidth="28dp"
                        app:egLegendHeight="40dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumregular"
                    android:text="■"
                    android:textColor="#ffd54f"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumregular"
                    android:text="부족"
                    android:textColor="#646464"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumregular"
                    android:text="■"
                    android:textColor="#fb8c00"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumregular"
                    android:text="충분"
                    android:textColor="#646464"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumregular"
                    android:text="■"
                    android:textColor="#d84315"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/nanumregular"
                    android:text="과다"
                    android:textColor="#646464"
                    android:textSize="15sp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/nanumregular"
                android:text="햇빛량 인지행동 플랜"
                android:textColor="#646464"
                android:textSize="17sp"
                android:textStyle="bold"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="100dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#ffffff"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="6"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_whatshot_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbold"
                            android:text="주간 평균 햇빛량"
                            android:textAlignment="viewStart"
                            android:textColor="#F75321"
                            android:textSize="18sp"></TextView>
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="#F75321"
                            android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                            ></ImageView>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumregular"
                            android:text="@string/good"
                            android:textColor="#F75321"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:lineSpacingExtra="6dp"
                        android:textColor="#5A5959"
                        android:fontFamily="@font/nanumregular"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="이번주 주간 햇빛량이 충분합니다. 다음주에도 이번주와 비슷한 햇빛량을 유지하세요."></TextView>
                    <View
                        android:layout_gravity="center|top"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ECECEC"/>


                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="6"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_highlight_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbold"
                            android:text="야간 평균 조명 밝기"
                            android:textAlignment="viewStart"
                            android:textColor="#F75321"
                            android:textSize="18sp"></TextView>
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="#F75321"
                            android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
                            ></ImageView>
                        <TextView
                            android:gravity="bottom"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumregular"
                            android:text="@string/bad"
                            android:textColor="#F75321"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:layout_marginBottom="22dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="#5A5959"
                        android:fontFamily="@font/nanumregular"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="이번주 야간 조명 밝기는 대체로 어두운 편입니다. 다음주에는 야간 조명의 밝기를 높이도록 하세요.">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>



