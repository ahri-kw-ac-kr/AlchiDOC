<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--상단바!!!-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="14dp"

                    android:fontFamily="@font/nanumregular"
                    android:gravity="right"
                    android:text="5월 전체 평균  "
                    android:textColor="#646464"
                    android:textSize="22sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="14dp"
                    android:background="#E1EFCF"

                    android:fontFamily="@font/nanumextra"
                    android:gravity="left"
                    android:text="활동량 84%"
                    android:textColor="#4A7913"
                    android:textSize="22sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:padding="3dp">

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="225dp"
                    android:layout_height="225dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0.8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="■"
                                android:textColor="#6EAD22"
                                android:textSize="20sp"></TextView>

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" 과다 "
                                android:textColor="#5F5F5F"
                                android:textSize="14sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumregular"
                                android:gravity="left"
                                android:text=" 04일"
                                android:textColor="#5F5F5F"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="■"
                                android:textColor="#8bc34a"
                                android:textSize="20sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" 충분 "
                                android:textColor="#5F5F5F"
                                android:textSize="14sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumregular"
                                android:gravity="left"
                                android:text=" 10일"
                                android:textColor="#5F5F5F"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="■"
                                android:textColor="#C0E296"
                                android:textSize="20sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=" 부족 "
                                android:textColor="#5F5F5F"
                                android:textSize="14sp"></TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nanumregular"
                                android:gravity="left"
                                android:text=" 16일"
                                android:textColor="#5F5F5F"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="365dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:drawableLeft="@drawable/ic_sprint"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/nanumbold"
                    android:text="월평균 걸음수"
                    android:textAlignment="viewStart"
                    android:textColor="#329035"
                    android:textSize="22sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="55dp"
                    android:fontFamily="@font/nanumextra"
                    android:text="5,391"
                    android:textColor="#329035"
                    android:textSize="22sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/nanumbold"
                    android:text="걸음"
                    android:textColor="#707070"
                    android:textSize="19sp"></TextView>

                <View
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="65dp"
                    android:background="#ECECEC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="83dp"
                    android:drawableLeft="@drawable/ic_calories"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/nanumbold"
                    android:lines="1"
                    android:text="월평균 칼로리"
                    android:textAlignment="viewStart"
                    android:textColor="#329035"
                    android:textSize="22sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="83dp"
                    android:layout_marginRight="60dp"
                    android:fontFamily="@font/nanumextra"
                    android:text="147"
                    android:textColor="#329035"
                    android:textSize="22sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="86dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/nanumbold"
                    android:text="kcal"
                    android:textColor="#707070"
                    android:textSize="19sp"></TextView>

                <View
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="300dp"
                    android:background="#ECECEC" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumregular"
                android:text="활동량 인지행동 플랜"
                android:textColor="#646464"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginBottom="70dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="25dp"
                    android:drawableLeft="@drawable/ic_sprint"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/nanumbold"
                    android:text="월평균 주간 활동량"
                    android:textAlignment="viewStart"
                    android:textColor="#329035"
                    android:textSize="22sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="42dp"
                    android:fontFamily="@font/nanumextra"
                    android:text="51"
                    android:textColor="#329035"
                    android:textSize="22sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/nanumbold"
                    android:text="%"
                    android:textColor="#707070"
                    android:textSize="19sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="58dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/nanumregular"
                    android:lineSpacingExtra="6dp"
                    android:text="이번달 활동량이 충분합니다. 다음달에는 무리한 활동을 자제해 주세요."
                    android:textColor="#5A5959"
                    android:textSize="20sp"></TextView>

                <View
                    android:layout_width="320dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="120dp"
                    android:background="#ECECEC" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="140dp"
                    android:drawableLeft="@drawable/ic_calories"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/nanumbold"
                    android:lines="1"
                    android:text="월평균 야간 활동량"
                    android:textAlignment="viewStart"
                    android:textColor="#329035"
                    android:textSize="22sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="42dp"
                    android:fontFamily="@font/nanumextra"
                    android:text="33"
                    android:textColor="#329035"
                    android:textSize="22sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="143dp"
                    android:layout_marginRight="25dp"
                    android:fontFamily="@font/nanumbold"
                    android:text="%"
                    android:textColor="#707070"
                    android:textSize="19sp"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="173dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/nanumregular"
                    android:lineSpacingExtra="6dp"
                    android:text="지난달보다 야간 활동량이 부족합니다. 다음달에는 더 많은 활동이 필요합니다."
                    android:textColor="#5A5959"
                    android:textSize="20sp"></TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



