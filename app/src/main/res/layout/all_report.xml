<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/default1"
            android:elevation="1dp"
            android:fontFamily="@font/nanumextra">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:text="@string/all_report1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#FFFFFF"
                android:textStyle="bold"></TextView>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:fillViewport="true"
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nanumregular"
                android:text="5월 17일 목요일 달성률"
                android:textColor="#646464"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
            <LinearLayout
                android:weightSum="3"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="118dp">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:layout_gravity="center"
                android:id="@+id/arc_progress1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:arc_bottom_text="@string/light"
                app:arc_bottom_text_size="13sp"
                app:arc_finished_color="#FA7033"
                app:arc_progress="75"
                app:arc_stroke_width="8dp"
                app:arc_text_color="#707070"
                app:arc_unfinished_color="#E6E6E6" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="118dp">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:layout_gravity="center"
                android:id="@+id/arc_progress2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:arc_bottom_text="@string/act"
                app:arc_bottom_text_size="13sp"
                app:arc_finished_color="#329035"
                app:arc_progress="80"
                app:arc_stroke_width="8dp"
                app:arc_text_color="#707070"
                app:arc_unfinished_color="#E6E6E6" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardElevation="1dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="118dp">
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:layout_gravity="center"
                android:id="@+id/arc_progress3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:arc_bottom_text="@string/sleep"
                app:arc_bottom_text_size="13sp"
                app:arc_finished_color="#7476B3"
                app:arc_progress="55"
                app:arc_stroke_width="8dp"
                app:arc_text_color="#707070"
                app:arc_unfinished_color="#E6E6E6" />
            </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumregular"
                android:text="@string/all_report2"
                android:textColor="#646464"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="100dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#ffffff"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                <TextView
                    android:layout_weight="6"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_moon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbold"
                    android:text="@string/sleep2"
                    android:textAlignment="viewStart"
                    android:textColor="#7476B3"
                    android:textSize="18sp"></TextView>
                <ImageView
                    android:layout_weight="0.3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#7476B3"
                    android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                    ></ImageView>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumregular"
                    android:text="@string/good"
                    android:textColor="#7476B3"
                    android:textSize="15sp"></TextView>
                    </LinearLayout>
                <TextView
                    android:lineSpacingExtra="6dp"
                    android:textColor="#5A5959"
                    android:fontFamily="@font/nanumregular"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="연령에 맞는 적당한 수면 시간입니다. 오늘도 평균 수면 시간을 유지하도록 하세요.">
                    <!--
                     android:autoSizeTextType="uniform"
                     app:autoSizePresetSizes="@array/auto_text_sizes"
                     -->
                </TextView>
                <View
                    android:layout_gravity="center|top"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#ECECEC"/>




                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="6"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_bed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbold"
                            android:text="@string/sleep3"
                            android:textAlignment="viewStart"
                            android:textColor="#7476B3"
                            android:textSize="18sp"></TextView>
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="#7476B3"
                            android:src="@drawable/ic_sentiment_dissatisfied_black_24dp"
                            ></ImageView>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumregular"
                            android:text="@string/bad"
                            android:textColor="#7476B3"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>

                    <TextView
                        android:lineSpacingExtra="6dp"
                        android:textColor="#5A5959"
                        android:fontFamily="@font/nanumregular"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="어제의 수면 시간당 평균 뒤척임이 수면 장애 수준의 수치입니다. 오늘의 숙면을 취하기 위해
서 오전의 햇빛양과 오전 활동량을 반드시 어제
보다 많이 늘려야 수면 시간이 늘어나고 숙면을
취할 수 있습니다. 일주일 내에 4회 이상 같은
현상이 발생하면 수면 장애 증세로 의심할 수
있습니다. 수면 장애 개선을 위하여 적극적으로
수면 위생 행동을 따라해 주십시오.">
                    </TextView>
                    <View
                        android:layout_gravity="center|top"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ECECEC"/>


                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="6"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_sprint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbold"
                            android:text="@string/act2"
                            android:textAlignment="viewStart"
                            android:textColor="#329035"
                            android:textSize="18sp"></TextView>
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="#329035"
                            android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                            ></ImageView>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumregular"
                            android:text="@string/good"
                            android:textColor="#329035"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>
                    <TextView
                        android:lineSpacingExtra="6dp"
                        android:textColor="#5A5959"
                        android:fontFamily="@font/nanumregular"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="어제 주간 활동량은 충분하였습니다. 오늘도 유지하거나 조금씩 늘려보세요.">
                    </TextView>
                    <View
                        android:layout_gravity="center|top"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ECECEC"/>



                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="6"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_calories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbold"
                            android:text="@string/act3"
                            android:textAlignment="viewStart"
                            android:textColor="#329035"
                            android:textSize="18sp"></TextView>
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="#329035"
                            android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                            ></ImageView>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumregular"
                            android:text="@string/good"
                            android:textColor="#329035"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>
                    <TextView
                        android:lineSpacingExtra="6dp"
                        android:textColor="#5A5959"
                        android:fontFamily="@font/nanumregular"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="어제 야간 활동량은 숙면을 취하기에 적당하였습니다. 오늘도 유지하도록 하세요.">
                    </TextView>
                    <View
                        android:layout_gravity="center|top"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ECECEC"/>








                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="6"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_whatshot_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbold"
                            android:text="@string/light2"
                            android:textAlignment="viewStart"
                            android:textColor="#F75321"
                            android:textSize="18sp"></TextView>
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#F75321"
                            android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                            ></ImageView>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumregular"
                            android:text="@string/good"
                            android:textColor="#F75321"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>
                    <TextView
                        android:lineSpacingExtra="6dp"
                        android:textColor="#5A5959"
                        android:fontFamily="@font/nanumregular"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="어제 주간 햇빛량은 충분하였습니다.
오늘도 어제와 같이 햇빛량을 유지하거나 늘리세요.">
                    </TextView>
                    <View
                        android:layout_gravity="center|top"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ECECEC"/>





                    <LinearLayout
                        android:weightSum="7"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="6"
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_whatshot_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumbold"
                            android:text="@string/light3"
                            android:textAlignment="viewStart"
                            android:textColor="#F75321"
                            android:textSize="18sp"></TextView>
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#F75321"
                            android:src="@drawable/ic_sentiment_satisfied_black_24dp"
                            ></ImageView>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumregular"
                            android:text="@string/good"
                            android:textColor="#F75321"
                            android:textSize="15sp"></TextView>
                    </LinearLayout>
                    <TextView
                        android:lineSpacingExtra="6dp"
                        android:textColor="#5A5959"
                        android:fontFamily="@font/nanumregular"
                        android:textSize="16sp"
                        android:layout_marginBottom="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="어제 야간 조명은 숙면을 취하기에 적당하였습니다.
 오늘도 유지하도록 하세요.">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B90D9"
        android:padding="3dp"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_editor_absoluteX="16dp"
        app:menu="@menu/bottom_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>